[colors]
# Normal Colors
black          = #282828
red            = #f43753
green          = #c9d05c
yellow         = #ffc24b
blue           = #b3deef
magenta        = #d3b987
cyan           = #73cef4
white          = #eeeeee
# Bright colors
black-alt      = #4c4c4c
red-alt        = #f43753
green-alt      = #c9d05c
yellow-alt     = #ffc24b
blue-alt       = #b3deef
magenta-alt    = #d3b987
cyan-alt       = #73cef4
white-alt      = #feffff
# Named Colors
background     = ${colors.black}
background-alt = ${colors.black-alt}
foreground     = ${colors.white}
foreground-alt = ${colors.white-alt}
primary        = ${colors.cyan}
secondary      = ${colors.blue}
alert          = ${colors.red-alt}

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 2.33%
;offset-x = 1%
;offset-y = 1%
