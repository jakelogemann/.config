[module/temperature]
type = internal/temperature
thermal-zone = 0

format = <ramp><label>
format-underline = ${colors.background}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.yellow}
label = %temperature-c%
label-warn = %temperature-c%!!
ramp-0 = _
ramp-0-foreground = ${colors.foreground}
ramp-1 = ~
ramp-1-foreground = ${colors.yellow}
ramp-2 = /!\
ramp-2-foreground = ${colors.red-alt}
ramp-foreground = ${colors.foreground-alt}
warn-temperature = 60

[module/appmenu]
type = custom/menu
; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = false
; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/bin/sh -c $COMMAND"
menu-0-0      = Browsers
menu-0-0-exec = menu-open-1
menu-0-1      = Multimedia
menu-0-1-exec = menu-open-2
menu-1-0      = Firefox
menu-1-0-exec = firefox &
menu-1-1      = Chromium
menu-1-1-exec = chromium &
menu-2-0      = Gimp
menu-2-0-exec = gimp &
menu-2-1      = Scrot
menu-2-1-exec = scrot &
; Available tags:
;   <label-toggle> (default) - gets replaced with <label-(open|close)>
;   <menu> (default)
; If expand-right is true, the default will be "<label-toggle><menu>" and the
; other way around otherwise.
; Note that if you use <label-toggle> you must also include
; the definition for <label-open>
; format = <label-toggle><menu>
label-open = Apps
label-open-foreground = ${colors.cyan}
label-close-foreground = ${colors.red-alt}
label-close = x
; Optional item separator
; Default: none
label-separator-foreground = ${colors.black-alt}
label-separator = |

